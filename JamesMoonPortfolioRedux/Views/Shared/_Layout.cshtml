<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - James Moon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JamesMoonPortfolioRedux.styles.css" asp-append-version="true" />
</head>
<body>
    <main style="height:100%;width:100%;" role="main">
        @RenderBody()
    </main>

    <img class="open-button" src="~/img/expert.png" alt="Talk to an Expert" onclick="openForm()" />
    <div class="chat-popup" id="popupBox" style="position: absolute; bottom: 0; right: 0; transform-origin: bottom right; border-radius: 5px;">
        <iframe src="~/chatbot/chat.html" width="500" height="500"></iframe> <!-- adjust the src of the iframe to point to your chatbot /-->
        <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>